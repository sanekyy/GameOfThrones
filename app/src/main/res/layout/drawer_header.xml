<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/header_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/spacing_small_8"
        android:paddingLeft="@dimen/spacing_normal_16"
        android:paddingRight="@dimen/spacing_normal_16"
        android:paddingTop="@dimen/spacing_medial_24">

        <!-- User photo -->
        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/spacing_normal_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_medium_56"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <!-- User name -->
            <TextView
                android:id="@+id/user_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/dev_name"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <!-- User e-mail -->
            <TextView
                android:id="@+id/user_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="sanekyy@gmail.com"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>